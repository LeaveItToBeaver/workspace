{
    "name": "user-management-system",
    "private": true,
    "scripts": {
        "install:all": "npm run install:server && npm run install:client",
        "install:server": "cd server && npm install",
        "install:client": "cd client && npm install",
    
        "server": "cd server && npm start",
        "client": "cd client && npm start",
    
        "server:dev": "cd server && npm run dev",
        "client:dev": "cd client && npm run dev",
        "client:dev:alt": "cd client && npm run dev:5174",
    
        "both": "concurrently --kill-others --names \"server,client\" --prefix-colors \"blue,green\" \"npm run server:dev\" \"npm run client:dev:alt\"",
    
        "sync": "rsync -av --delete /project/workspace/ /project/sandbox/",
        "start": "npm run sync && npm run server",
        "dev": "npm run sync && npm run client",
    
        "test": "cd server && npm test"
    },
    "devDependencies": {
      "concurrently": "^7.6.0"
    }
  }
  