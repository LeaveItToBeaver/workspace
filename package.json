{
  "name": "user-management-system",
  "private": true,
  "scripts": {
    "install:all": "npm run install:server && npm run install:client",
    "install:server": "npm --prefix server install",
    "install:client": "npm --prefix client install",

    "server": "node server/src/index.js",
    "server:dev": "npm --prefix server run dev",

    "client": "npm --prefix client start",
    "client:dev": "npm --prefix client run dev",

    "both": "concurrently --kill-others --names \"server,client\" --prefix-colors \"blue,green\" \"npm run server:dev\" \"npm run client:dev\"",

    "start": "npm run server",
    "dev":   "npm run client",

    "test": "npm --prefix server test"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.1.10"
  }
}
